{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
